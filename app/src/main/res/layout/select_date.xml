<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >

			<TextView
				android:id="@+id/textView1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="5dip"
				android:gravity="center"
				android:text="@string/stringMessage"
				android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

			<DatePicker
				android:id="@+id/datePicker"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="5dip"></DatePicker>

			<TimePicker
				android:id="@+id/timePicker"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="5dip"></TimePicker>

			<CheckBox
				android:id="@+id/shadowsOnWalls"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/shadowsOnWalls"></CheckBox>

			<CheckBox
				android:id="@+id/expandToStreet"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/expandToStreet"></CheckBox>

			<Button
				android:id="@+id/okButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="5dip"
				android:text="@android:string/ok"></Button>
		</LinearLayout>
	</ScrollView>

</LinearLayout>
